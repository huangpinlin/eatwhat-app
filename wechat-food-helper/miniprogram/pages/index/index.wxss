.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.result-container {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: transform 0.5s ease;
}

.result-container.animating {
  animation: bounce 0.5s ease;
}

@keyframes bounce {
  0% { transform: scale(1); }
  50% { transform: scale(0.95); }
  100% { transform: scale(1); }
}

.result-category {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.result-item {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}

.placeholder {
  font-size: 32rpx;
  color: #999;
  text-align: center;
}

.button-container {
  width: 100%;
  display: flex;
  justify-content: center;
}

.random-button {
  width: 80%;
  height: 88rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.3s ease;
}

.random-button.disabled {
  opacity: 0.7;
}

.random-button:active {
  opacity: 0.9;
}